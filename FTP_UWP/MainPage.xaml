<Page
    x:Class="FTP_UWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FTP_UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Height="420"
    Width="366">

    <Grid Loaded="Grid_Loaded" >
        <TextBox x:Name="login" HorizontalAlignment="Left" Margin="38,68,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="51" Width="290" FontSize="25"/>
        <PasswordBox x:Name="pass" HorizontalAlignment="Left" Margin="38,0,0,0" VerticalAlignment="Center" Height="51" Width="290" FontSize="25"/>
        <Button Content="Login" Margin="38,257,0,0" VerticalAlignment="Top" Width="290" Height="51" FontSize="25" Click="Button_Click_1"/>
        <Button Content="Signin" Margin="38,327,0,0" VerticalAlignment="Top" Width="290" Height="51" FontSize="25" Click="Button_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="37,30,0,0" Text="Login" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="25"/>
        <TextBlock HorizontalAlignment="Left" Margin="37,133,0,0" Text="Password" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="25"/>
    </Grid>

</Page>
